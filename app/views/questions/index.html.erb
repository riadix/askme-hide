<div class="container">

  <p class="mt">
    <%= link_to "Create new question", new_question_path, class: "button button-main" %>
  </p>

</div>

<div class="container mt-sm">
  <h2 class="title-lg">All questions</h2>
</div>

<% @questions.each do |question| %>
  <% if question.hidden == false %>

    <div class="mt-sm container">
      <%= render question %>
    </div>

  <% else %>

    <div class="mt-sm container hidden">
      <%= render question %>
    </div>

  <% end %>
<% end %>
